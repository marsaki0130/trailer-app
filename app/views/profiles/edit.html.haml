.container
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :avatar, 'アバター'
    %div
      = f.file_field :avatar
    %div
      = f.label :nickname, 'ニックネーム'
    %div
      = f.text_field :nickname, class: 'text'
    %div
      = f.label :introduction, '紹介'
    %div
      = f.text_area :introduction
    = f.submit '保存', class: 'btn-primary'